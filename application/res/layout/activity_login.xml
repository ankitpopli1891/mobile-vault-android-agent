<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:paddingLeft="@dimen/relative_padding"
    android:paddingRight="@dimen/relative_padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_border"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_bottom"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_top"
        android:layout_centerInParent="true"
        android:weightSum="20"
      >

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="@integer/weight_logo"
            android:layout_marginTop="@dimen/logo_margin"
            android:padding="@dimen/padding_logo"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logotp"
           
            />
          <ImageView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="@integer/weight_text"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="@dimen/margin_text"
            android:layout_marginRight="@dimen/margin_text"
            android:layout_marginBottom="@dimen/marginbottom_text"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mv1"
           
            />
      <!--   <TextView
            android:id="@+id/mvText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:text="MobileVault"
            android:textColor="#001258"
           
            android:typeface="sans"
            android:layout_weight=""
             android:textAppearance="?android:attr/textAppearanceLarge"  /> -->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignTop="@+id/email_address"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#eeeeee" />

        <EditText
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="@dimen/margin_edittext"
            android:paddingLeft="10dp"
            android:hint="Email Address"
            android:background="@drawable/inputbox"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:singleLine="true"
            android:textSize="@dimen/textsize"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/margin_edittext"
            android:layout_marginRight="@dimen/margin_edittext"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="0dp"
            android:hint="Password"
            android:imeActionLabel="Chak de"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:background="@drawable/inputbox"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="@dimen/textsize" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="@dimen/margin_edittext"
            android:background="@drawable/signin_selector"
            android:text="Sign In"
            android:textSize="@dimen/textsize"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>